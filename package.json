{
  "name": "libreact",
  "version": "0.2.0",
  "description": "React standard library",
  "main": "lib/index.js",
  "keywords": [
    "react",
    "stdlib",
    "libreact",
    "utilities",
    "MailOnline"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MailOnline/libreact.git"
  },
  "dependencies": {
    "react": "15",
    "react-dom": "15",
    "prop-types": "15",
    "throttle-debounce": "^1.0.1",
    "freestyler-context": "^1.3.3",
    "freestyler-renderer": "^1.3.2"
  },
  "peerDependencies": {
    "react": "15",
    "react-dom": "15",
    "prop-types": "15"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.10",
    "@storybook/addon-links": "^3.3.10",
    "@storybook/react": "^3.3.10",
    "@types/chai": "4.1.1",
    "@types/jest": "22.0.1",
    "@types/node": "9.3.0",
    "@types/react": "15",
    "chai": "4.1.2",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-15": "1.0.5",
    "enzyme-to-json": "3.3.0",
    "gulp": "3.9.1",
    "gulp-typescript": "3",
    "jest": "22.1.2",
    "jest-environment-jsdom": "^22.1.4",
    "jest-environment-jsdom-global": "^1.0.3",
    "jest-tap-reporter": "1.9.0",
    "mocha": "5.0.0",
    "mol-conventional-changelog": "1.2.0",
    "react-markdown": "3.1.4",
    "react-test-renderer": "15",
    "rimraf": "2.6.2",
    "to-string-loader": "1.1.5",
    "ts-jest": "22.0.1",
    "ts-loader": "3.2.0",
    "ts-node": "4.1.0",
    "typescript": "2.6.2",
    "webpack": "3.10.0",
    "semantic-release": "^12.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/mol-conventional-changelog"
    }
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && gulp build-ts",
    "test": "npm run test:server && npm run test:client",
    "test:server": "mocha -r ts-node/register src/**/*.test-server.ts*",
    "test:client": "jest",
    "test:client:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "storybook": "start-storybook -p 6007",
    "build-storybook": "build-storybook",
    "start": "npm run storybook",
    "semantic-release": "semantic-release"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [],
    "testRegex": ".*/__tests__/.*\\.(test|spec)\\.(jsx?|tsx?)$",
    "setupFiles": [
      "./src/__tests__/setup.js"
    ],
    "reporters": [
      "jest-tap-reporter"
    ],
    "testEnvironment": "jest-environment-jsdom-global"
  }
}
