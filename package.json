{
  "name": "@mol-fe/mol-fe-react",
  "version": "1.1.0",
  "description": "MOL React.js utilities",
  "main": "lib/index.js",
  "keywords": [
    "react",
    "utilities",
    "MailOnline"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MailOnline/mol-fe-react.git"
  },
  "dependencies": {
    "react": "15",
    "react-dom": "15"
  },
  "peerDependencies": {
    "react": "15",
    "react-dom": "15"
  },
  "devDependencies": {
    "jest": "22.1.2",
    "jest-tap-reporter": "1.9.0",
    "ts-jest": "22.0.1",
    "typescript": "2.6.2",
    "ts-loader": "3.2.0",
    "ts-node": "4.1.0",
    "rimraf": "2.6.2",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-15": "1.0.5",
    "react-test-renderer": "15",
    "mol-conventional-changelog": "1.2.0",
    "@types/node": "9.3.0",
    "@types/jest": "22.0.1",
    "@types/react": "15",
    "@storybook/react": "^3.3.10",
    "@storybook/addon-actions": "^3.3.10",
    "@storybook/addon-links": "^3.3.10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/mol-conventional-changelog"
    }
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "pub": "npm publish --registry http://sinopia.devhsk.mol.dmgt.net:4873",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*/__tests__/.*\\.(test|spec)\\.(jsx?|tsx?)$",
    "setupFiles": [
      "./src/__tests__/setup.js"
    ],
    "reporters": [
      "jest-tap-reporter"
    ]
  }
}
